<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="style.css">
        <title>Digipogs</title>
    </head>
    <body>

        <div id="tagDropDown">
            <button><a href="/rewards">Rewards</a></button>
            <button><a href="/">Pogs</a></button>
        </div>

        <table id="acc">
            <thead id="tableHead">
                <th id="fbUsername">Formbar Username</th>
                <th id="username">Username</th>
                <th id="amount">Amount of pogs</th>
            </thead>
            <tbody>
                <!--Creates rows on the webpage based off the table in the DB-->
                <% for(let i=0; i < rows.length; i++) {%>
                    <tr>
                        <td><%- rows[i].fbUserName %></td>
                        <td><%- rows[i].userName %></td>
                        <td><%- rows[i].amountOfPogs %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>    
    </body>
</html>